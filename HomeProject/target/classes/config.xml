<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="idGenerator" class="com.valdemar.service.IdGeneratorImp">
    </bean>
    <bean id="taskRepository" class="com.valdemar.repository.MemoryTaskRepository">
    </bean>
    <bean id="informationRepository" class="com.valdemar.repository.MemoryInformationRepository">
    </bean>

    <bean id="taskService" class="com.valdemar.service.TaskServiceImp">
        <constructor-arg name="taskRepository" ref="taskRepository"/>
        <constructor-arg name="idGenerator" ref="idGenerator"/>
    </bean>
    <bean id="informationToTaskService" class="com.valdemar.service.InformationToTaskServiceImp">
        <constructor-arg name="idGenerator" ref="idGenerator"/>
        <constructor-arg name="informationRepository" ref="informationRepository"/>
    </bean>

    <bean id="reportGeneration" class="com.valdemar.service.ReportGenerationImp">
        <constructor-arg name="taskService" ref="taskService"/>
        <constructor-arg name="informationToTaskService" ref="informationToTaskService"/>
    </bean>
    <bean id="reportView" class="com.valdemar.view.ReportToConsoleImp">
    </bean>

    <bean id="assignService" class="com.valdemar.service.AssignServiceImp">
        <constructor-arg name="taskService" ref="taskService"/>
    </bean>

    <bean id="demo" class="com.valdemar.Demo" init-method="demoData">
        <constructor-arg name="assignService" ref="assignService"/>
        <constructor-arg name="informationToTaskService" ref="informationToTaskService"/>
        <constructor-arg name="reportGeneration" ref="reportGeneration"/>
        <constructor-arg name="reportView" ref="reportView"/>
        <constructor-arg name="taskService" ref="taskService"/>
    </bean>
</beans>